root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_size = 4
tab_width = 4
indent_style = space
trim_trailing_whitespace = true
max_line_length = 100

[*.{yml,yaml,toml,rb}]
indent_size = 2
tab_width = 2

[*.{norg,md}]
max_line_length = 80
indent_size = 2
tab_width = 2

[*.{md,mdx}]
trim_trailing_whitespace = false
max_line_length = off

